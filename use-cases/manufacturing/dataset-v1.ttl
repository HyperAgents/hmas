# Signifier base materials #
############################

# This part is here to provide templates for endpoint specification
# This is meant to be under the hood
# Later in the endpoint specifications we will see what kind of equivalences it makes

_:AuthorizationFormRequired a sh:PropertyShape ;
    sh:path (
        htv:headers
        [ sh:zeroOrMorePath rdf:rest ]
        rdf:first
    ) ;
    sh:minQualifiedShape 1 ;
    sh:maxQualifiedShape 1 ;
    sh:qualifiedValueShape [
        a sh:NodeShape ;
        sh:class htv:MessageHeader ;
        sh:property [
            a sh:PropertyShape ;
            sh:path htv:fieldName ;
            sh:hasValue "Authorization" ;
            sh:minCount 1 ;
            sh:maxCount 1
        ] , [
            a sh:PropertyShape ;
            sh:path htv:fieldValue ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:datatype xsd:string ;
        ]
    ] .

_:Authorization a owl:Class ;
    owl:equivalentClass [
        a owl:Restriction ;
        owl:onProperty sh:property ;
        owl:hasValue _:AuthorizationFormRequired
    ] .

# An action execution with a sh:class set on hmas:ActionExecution
_:ActionExecutionShape a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            [
                a owl:Restriction ;
                owl:onProperty sh:class ;
                owl:hasValue hmas:ActionExecution
            ]
            sh:NodeShape
        )
    ] .

_:RequiredValueShape a owl:Class ;
    owl:equivalentClass [
        owl:intersectionOf (
            [
                a owl:Restriction ;
                owl:onProperty sh:minQualifiedShape ;
                owl:hasValue 1 
            ]
            [
                a owl:Restriction ;
                owl:onProperty sh:maxQualifiedShape ;
                owl:hasValue 1 
            ]
            sh:PropertyShape
        )
    ] .

_:RequiredPropertyShape a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:equivalentClass (
            [
                a owl:Restriction ;
                owl:onProperty sh:minCount ;
                owl:hasValue 1
            ]
            [
                a owl:Restriction ;
                owl:onProperty sh:maxCount ;
                owl:hasValue 1
            ]
            sh:PropertyShape
        )
    ] .

_:EndpointSpecification a owl:Class ;
    owl:equivalentClass [
        owl:intersectionOf (
            [
                a owl:Restriction ;
                owl:onProperty sh:path ;
                owl:hasValue prov:used
            ]
            _:RequiredValueShape
        )
    ] .

_:TargetUrl a owl:Class ;
    owl:equivalentClass [
        owl:intersectionOf (
            [
                a owl:Restriction ;
                owl:onProperty sh:path ;
                owl:hasValue hctl:hasTarget
            ]
            _:RequiredPropertyShape
        )
    ] .

_:FormSpecification a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            [
                a owl:Restriction ;
                owl:onProperty sh:class ;
                owl:hasValue hctl:Form
            ]
            sh:NodeShape
        )
    ] .

_:AcceptJsonProperty a sh:PropertyShape ;
    sh:path hctl:forContentType ;
    sh:hasValue "application/json" ;
    sh:minCount 1 ;
    sh:maxCount 1 .


_:AcceptJson a owl:Class ;
    owl:equivalentClass [
        a owl:Restriction ;
        owl:onProperty sh:property ;
        owl:hasValue _:AcceptJsonProperty
    ] .

_:MethodField a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            [
                a owl:Restriction ;
                owl:onProperty sh:path ;
                owl:hasValue hctl:methodName
            ]
            [
                a owl:Restriction ;
                owl:onProperty sh:minCount ;
                owl:hasValue 1
            ]
            [
                a owl:Restriction ;
                owl:onProperty sh:maxCount ;
                owl:hasValue 1
            ]
            sh:PropertyShape
        )
    ] .

_:GetMethodField a _:MethodField ;
    sh:hasValue "GET" .

_:PutMethodField a _:MethodField ;
    sh:hasValue "PUT" .

_:PostMethodField a _:MethodField ;
    sh:hasValue "POST" .

_:DeleteMethodField a _:MethodField ;
    sh:hasValue "DELETE" .

_:GetMethod a owl:Class ;
    owl:equivalentClass [
        a owl:Restriction ;
        owl:onProperty sh:property ;
        owl:hasValue _:GetMethodField
    ] .

_:PutMethod a owl:Class ;
    owl:equivalentClass [
        a owl:Restriction ;
        owl:onProperty sh:property ;
        owl:hasValue _:PutMethodField
    ] .

_:PostMethod a owl:Class ;
    owl:equivalentClass [
        a owl:Restriction ;
        owl:onProperty sh:property ;
        owl:hasValue _:PostMethodField
    ] .

_:DeleteMethod a owl:Class ;
    owl:equivalentClass [
        a owl:Restriction ;
        owl:onProperty sh:property ;
        owl:hasValue _:DeleteMethodField
    ] .

# A JsonBodyShape is a sh:PropertyShape with:
#   - a sh:path set to hmas:hasInput
#   - a sh:qualifiedMinCount set to 1
#   - a sh:qualifiedMaxCount set to 1
_:BodySpecification a owl:Class ;
    owl:equivalentClass [
        a owl:Class ;
        owl:intersectionOf (
            [
                a owl:Restriction ;
                owl:onProperty sh:path ;
                owl:hasValue hmas:hasInput
            ]
            _:RequiredValueShape
        )
    ] .
####################
# JSON Body shapes #
####################

_:JsonSetOperatorBody a sh:NodeShape ;
    sh:class cherrybot:OperatorSchema ;
    sh:property [
        sh:path foaf:name ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string
    ] , [
        sh:path foaf:mbox ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:string
    ] .

_:JsonRotationElement a sh:NodeShape ;
    sh:class cherrybot:CoordinatesSchema ;
    sh:property [
        sh:path cherrybot:xCoordinate ;
        sh:minExclusive -7.2E2 ;
        sh:maxExclusive 7.2E2 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:float 
    ] , [
        sh:path cherrybot:yCoordinate ;
        sh:minExclusive -7.2E2 ;
        sh:maxExclusive 7.2E2 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:float 
    ] , [
        sh:path cherrybot:zCoordinate ;
        sh:minExclusive -7.2E2 ;
        sh:maxExclusive 7.2E2 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:float 
    ] .

_:JsonTranslationElement a sh:NodeShape ;
    sh:class cherrybot:RotationSchema ;
    sh:property [
        sh:path cherrybot:roll ;
        sh:minExclusive -1.8E2 ;
        sh:maxExclusive 1.8E2 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:float 
    ] , [
        sh:path cherrybot:pitch ;
        sh:minExclusive -1.8E2 ;
        sh:maxExclusive 1.8E2 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:float 
    ] , [
        sh:path cherrybot:yaw ;
        sh:minExclusive -1.8E2 ;
        sh:maxExclusive 1.8E2 ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype xsd:float 
    ] .

_:JsonSetPositionBody a sh:NodeShape ;
    sh:class cherrybot:TcpMovementSchema ;
    sh:property [
        sh:path cherrybot:coordinate ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape _:JsonTranslationElement
    ] , [
        sh:path cherrybot:rotation ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape _:JsonRotationElement
    ] .

