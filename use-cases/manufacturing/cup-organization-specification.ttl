@base <https://ns.inria.fr/hmas/> .

@prefix org-dataset: <http://ns.inria.fr/hmas/organizations/organization-dataset.ttl#> .
@prefix org-cup: <http://ns.inria.fr/hmas/organizations/cup-organization-specification.ttl#> .

@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix hmas: <https://purl.org/hmas/> .

@prefix ag-b: <workspaces/cup-production-site/agents/agent-b#> .
@prefix ag-c: <workspaces/cup-production-site/agents/agent-c#> .
@prefix agent-rb: <Market-Place/agents/agent-rb#> .

@prefix cpr-org: <organizations/cpr#> .

######################################
# Generic organization specification #
######################################

# Memberships specifications

org-cup:ProductionOperator a sh:NodeShape , rdfs:Class ;
    rdfs:subClassOf hmas:Membership ;
    sh:property [
        sh:path hmas:isMembershipOf ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [ sh:class hmas:Agent ]
    ] , [
        sh:path hmas:isMembershipFor ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:hasValue org-dataset:Operator
    ] , [
        sh:path hmas:isMembershipIn ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [ sh:class org-dataset:ProductionGroup ]
    ] .

org-cup:ProductionOrderManager a sh:NodeShape , rdfs:Class ;
    rdfs:subClassOf hmas:Membership ;
    sh:property [
        sh:path hmas:isMembershipOf ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [ sh:class hmas:Agent ]
    ] , [
        sh:path hmas:isMembershipFor ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:hasValue org-dataset:OrderManager
    ] , [
        sh:path hmas:isMembershipIn ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [ sh:class org-dataset:ProductionGroup ]
    ] .

org-cup:BusinessSellerRepresentative a sh:NodeShape , rdfs:Class ;
    rdfs:subClassOf hmas:Membership , rdfs:Class ;
    sh:property [
        sh:path hmas:isMembershipOf ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [ sh:class hmas:Agent ]
    ] , [
        sh:path hmas:isMembershipFor ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:hasValue org-dataset:SellerRepresentative
    ] , [
        sh:path hmas:isMembershipIn ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [ sh:class org-dataset:BusinessGroup ]
    ] .

# Generic organization specification

org-cup:GenericCupCompanyOrganization a sh:NodeShape , rdfs:Class ;
    rdfs:subClassOf hmas:Organization ;
    sh:property [
        sh:path hmas:hasOrganizationalValue ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:hasValue org-dataset:IntegrityRespect
    ] , [
        sh:path hmas:providesRole ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:hasValue org-dataset:SellerRepresentative 
    ] , [
        sh:path hmas:providesRole ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:hasValue org-dataset:OrderManager
    ] , [
        sh:path hmas:providesRole ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:hasValue org-dataset:Operator
    ] , [
        sh:path hmas:isStructuredBy ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [ sh:class org-dataset:BusinessGroup ] ;
        sh:qualifiedValuesShapeDisjoint true
    ] , [
        sh:path hmas:isStructuredBy ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [ sh:class org-dataset:ProductionGroup ] ; 
        sh:qualifiedValuesShapeDisjoint true
    ] .

###########################################
# Instanciation of the organization shape #
###########################################

org-cup:CPRBusinessGroup a org-dataset:BusinessGroup .
org-cup:CPRProductionGroup a org-dataset:ProductionGroup .

org-cup:CPRProductionOperator a org-cup:ProductionOperator ;
    hmas:isMembershipOf ag-c:agent ;
    hmas:isMembershipFor org-dataset:Operator ;
    hmas:isMembershipIn org-dataset:ProductionGroup .

org-cup:CPRProductionOrderManager a org-cup:ProductionOrderManager ;
    hmas:isMembershipOf ag-b:agent ;
    hmas:isMembershipFor org-dataset:OrderManager ;
    hmas:isMembershipIn org-dataset:ProductionGroup .

org-cup:CPRBusinessSellerRepresentative a org-cup:BusinessSellerRepresentative ;
    hmas:isMembershipOf agent-rb:agent ;
    hmas:isMembershipFor org-dataset:SellerRepresentative ;
    hmas:isMembershipIn org-dataset:BusinessGroup .

org-cup:CPRProductionOrderManager org-dataset:canCommunicateWith org-cup:CPRBusinessSellerRepresentative .
org-cup:CPRProductionOrderManager org-dataset:canCommunicateWith org-cup:CPRProductionOperator .


