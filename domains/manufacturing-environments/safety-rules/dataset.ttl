:safetyRule a :RegulativeNorm .

:possibleWorldWithNorms a :PossibleWorld .
:possibleWorldWithNorms :hasDeonticSpecification :safetyRule .

:worldWithFire a :PossibleWorld .
:worldWheredoorsAreClosed a :Obligation .

:safetyRule :hasNormativeContext :worldWithFire .
:safetyRule :obliges :worldWheredoorsAreClosed .





# Real world assumptions : 
:i3sLab :a  hreg:Organization .
:i3sLabSpecification a  hreg:OrganizationSpecification .

:i3sLab hreg:enacts :i3sLabSpecification .
:i3sLabSpecification hreg:defines :i3sLab .

:i3sLabWorkspace hmas:contains :i3sLab .
:i3sLabWorkspace hmas:contains  :smoke .

:i3sLabWorkspace :isPossiblyDescribedBy :possibleWorldWithNorms .
:i3sLabWorkspace :isPossiblyDescribedBy :worldWithFire .

:i3sLabSpecification :definesNorm :safetyRule .
:i3sLab :enforcesNorm :safetyRule .

:safetyGuard a hmas:Agent .
:i3sLabWorkspace hmas:contains :safetyGuard .

# It does not exist but..
:safetyGuardRole :a hreg:SocialRole .
# :safetyGuardRole a hreg:AuthorityRole .
:i3sLabSpecification hreg:definesRole :safetyGuardRole .

# This, is currently allowed : 
:i3sLab hreg:providesRoles :safetyGuardRole .


# It does not exist but.. to know that currently the SafetyGuard :hasRole :Guard
:safetyGuard hreg:hasRole :safetyGuardRole .


