@prefix ex: <http://example.org/> .
@prefix hmas: <https://purl.org/hmas/> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

#################################################################
#    Core Ontology
#################################################################

## Workspace
ex:LogisticsWS a hmas:Workspace ;
    hmas:contains ex:Alice, ex:Bob, ex:Carol, ex:David, ex:Elton, ex:WarehouseStGallen .

## Agents
ex:Alice a hmas:Agent ;
    hmas:isContainedIn ex:LogisticsWS ;
    hmas:isMemberOf ex:SL_Logistics .
ex:Bob a hmas:Agent ;
    hmas:isContainedIn ex:LogisticsWS ;
    hmas:isMemberOf ex:SL_Logistics .
ex:Carol a hmas:Agent ;
    hmas:isContainedIn ex:LogisticsWS ;
    hmas:isMemberOf ex:SL_Logistics .
ex:David a hmas:Agent ;
    hmas:isContainedIn ex:LogisticsWS ;
    hmas:isMemberOf ex:SL_Logistics .
ex:Elton a hmas:Agent ;
    hmas:isContainedIn ex:LogisticsWS ;
    hmas:isMemberOf ex:SL_Logistics .
ex:Walter a hmas:Agent ;
    hmas:isContainedIn ex:LogisticsWS ;
    hmas:isMemberOf ex:GL_Logistics .
    
## Artifacts
ex:WarehouseStGallen a hmas:Artifact ;
    hmas:isContainedIn ex:LogisticsWS ;
    hmas:isMaterialOf ex:SL_Logistics .

#################################################################
#    Regulation Ontology
#################################################################

## Organization Specification
ex:Logistics a hmas:OrganizationSpecification ;
    hmas:defines ex:SL_Logistics, ex:GL_Logistics .

ex:Manufacturing a hmas:OrganizationSpecification ;
    hmas:defines ex:HSG_Factory, ex:ITM_Factory .

## Organizational Goals
ex:EnhancedCustomerService a hmas:OrganizationalGoal ;
    rdfs:comment "Better handling of transportation and the overall logistics operation."@en ;
    rdfs:label "Enhanced Customer Service"@en .

ex:EnhancedEfficiency a hmas:OrganizationalGoal ;
    rdfs:comment "Increase the cost-effectiviness of the transportation system, reduce overhead costs and simplify the order processing."@en ;
    rdfs:label "Enhanced Efficiency"@en .

## Organizational Values
ex:Commitment a hmas:OrganizationalValue ;
    rdfs:comment "Do everything you can to keep the organization promisses to the customers."@en ;
    rdfs:label "Commitment"@en .

ex:IntegrityRespect a hmas:OrganizationalValue ;
    rdfs:comment "Communicate openly and honestly with the customers and other members of the organization."@en ;
    rdfs:label "Integrity and Respect"@en .
    
## Roles
ex:SL_HumanResourcesOfficer a hmas:Role .
ex:SL_FinanceOfficer a hmas:Role .
ex:SL_AccountManager a hmas:Role .
ex:SL_Planner a hmas:Role .
ex:SL_Carrier a hmas:Role .
ex:SL_Collector a hmas:Role .
ex:SL_Deliverer a hmas:Role .

## Missions
ex:SL_HumanResourcesManagement a hmas:Mission .
ex:SL_FinancialManagement a hmas:Mission .
ex:SL_CommercialManagement a hmas:Mission .
ex:SL_PlanningManagement a hmas:Mission .
ex:SL_CarryGoods a hmas:Mission .
ex:SL_CollectGoods a hmas:Mission .
ex:SL_DeliverGoods a hmas:Mission .

## Facility
ex:SL_PickingArea a hmas:Facility .
ex:SL_ReceivingArea a hmas:Facility .

## Organizations
ex:SL_Logistics a hmas:Organization ;
    hmas:enacts ex:Logistics ;
    hmas:hasGoal ex:EnhancedCustomerService, ex:EnhancedEfficiency ;
    hmas:hasValue ex:Commitment, ex:IntegrityRespect ;
    hmas:providesRole ex:SL_HumanResourcesOfficer, ex:SL_FinanceOfficer, ex:SL_AccountManager, ex:SL_Planner, ex:SL_Carrier, ex:SL_Collector, ex:SL_Deliverer ;
    hmas:proposesMission ex:SL_HumanResourcesManagement, ex:SL_FinancialManagement, ex:SL_CommercialManagement, ex:SL_PlanningManagement, ex:SL_CarryGoods, ex:SL_CollectGoods, ex:SL_DeliverGoods ;
    hmas:proposesFacility ex:SL_PickingArea, ex:SL_ReceivingArea ;
    hmas:isSituatedOn ex:Alice, ex:Bob, ex:Carol, ex:David, ex:Elton, ex:WarehouseStGallen .

ex:GL_Logistics a hmas:Organization ;
    hmas:enacts ex:Logistics ;
    hmas:isSituatedOn ex:Walter .
        
ex:HSG_Factory a hmas:Organization ;
    hmas:enacts ex:Manufacturing .

ex:ITM_Factory a hmas:Organization ;
    hmas:enacts ex:Manufacturing .    
