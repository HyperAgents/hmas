    rdfs:isDefinedBy : ;
    sh:path htv:methodName ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:hasValue "DELETE" .

:AuthorizationHeader rdf:type sh:NodeShape ;
    rdfs:isDefinedBy : ;
    sh:class hmas:ActionExecution ;
    sh:property [
        sh:path (
            prov:used
            htv:headers
            [sh:zeroOrMorePath rdf:rest]
            rdf:first
        ) ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [
            sh:class htv:messageHeader ;
            sh:property [
                sh:path htv:fieldName ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:hasValue "Authorization"
            ] , [
                sh:path htv:fieldValue ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:datatype xsd:string
            ]
        ]
    ] .

:SlugHeader rdf:type sh:NodeShape ;
    rdfs:isDefinedBy : ;
    sh:class hmas:ActionExecution ;
    sh:property [
        sh:path (
            htv:headers
            [sh:zeroOrMorePath rdf:rest]
            rdf:first
        ) ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [
            sh:class htv:messageHeader ;
            sh:property [
                sh:path htv:fieldName ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:hasValue "Slug"
            ] , [
                sh:path htv:fieldValue ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:datatype xsd:string
            ]
        ]
    ] .

:XAgentWebIDHeader rdf:type sh:NodeShape ;
    rdfs:isDefinedBy : ;
    sh:class hmas:ActionExecution ;
    sh:property [
        sh:path (
            htv:headers
            [sh:zeroOrMorePath rdf:rest]
            rdf:first
        ) ;
        sh:qualifiedMinCount 1 ;
        sh:qualifiedMaxCount 1 ;
        sh:qualifiedValueShape [
            sh:class htv:messageHeader ;
            sh:property [
                sh:path htv:fieldName ;
                sh:minCount 1 ;
