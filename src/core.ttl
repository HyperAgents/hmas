#################################################################
#    Classes
#################################################################


:Agent a owl:Class ;
       rdfs:comment "An entity that is capable of flexible autonomous behavior."@en ;
       rdfs:label "Agent"@en, "Agent"@fr.



:Artifact a owl:Class ;
          rdfs:comment "An artifact is a resource (or tool) that exposes affordances to agents. Agents use artifacts to achieve their design objectives."@en ;
          rdfs:label "Artifact"@en, "Artéfact"@en .



:Platform a owl:Class ;
          rdfs:comment "A platform is a system providing a collection of features to support Hypermedia MAS. Common features include support for communication and interaction, runtime environments for agents, artifacts, or organization, etc."@en ;
          rdfs:label "Platform"@en, "Platforme"@fr .



:ResourceProfile a owl:Class ;
                 rdfs:comment "Structured data describing a resource through general metadata, domain- and application-specific metadata, and signifiers."@en ;
                 rdfs:label "Resource Profile"@en, "Profil de Resource"@fr .



:Signifier rdf:type owl:Class ;
           rdfs:comment "Structured data describing (one or multiple) affordances exposed by an artifact to agents. Structured data may include metadata about the signifier (e.g., creator, salience) or the described affordance (e.g., predicted pertinence)."@en ;
           rdfs:label "Signifier"@en, "Signifiant"@fr  .



:Workspace a owl:Class ;
           rdfs:comment "A space or logical container of one or multiple activities involving a set of agents and potentially artifacts. Workspaces can contain agents, artifacts, and also other workspaces."@en ;
           rdfs:label "Workspace"@en, "Espace de Travail"@fr .


### Top ontology constraints for coherent modeling 

# disjoint top classes 

[ a owl:AllDisjointClasses ;
    owl:members ( :Agent :Artifact :Platform :ResourceProfile :Signifier :Workspace ) ] . 



#################################################################
#    Object Properties
#################################################################


:contains a owl:AsymmetricProperty , owl:TransitiveProperty ;
          owl:inverseOf :isContainedIn ;
          rdfs:domain :Workspace ;
          rdfs:range [ a owl:Class ;
                        owl:unionOf ( :Agent
                                      :Artifact
                                      :Workspace
                                    )
                      ] ;
          rdfs:comment "A relation that refers to a logical containment relation and is related to the definition of a workspace as a logical container."@en ;
          rdfs:label "contains"@en .



:describes a owl:ObjectProperty ;
           owl:inverseOf :isDescribedBy ;
           rdfs:domain [ a owl:Class ;
                         owl:unionOf ( :ResourceProfile
                                       :Signifier
                                     )
                       ] ;
           rdfs:comment "A relation that describes all signifiers associated to a resource profile."@en ;
           rdfs:label "describes"@en .



:hasHomePlatform a owl:ObjectProperty ;
                 rdfs:subPropertyOf :isHostedBy ;
                 owl:inverseOf :hostsAgent ;
                 rdfs:domain :Agent ;
                 rdfs:range :Platform ;
                 rdfs:comment "The HAP of an agent is the AP on which the agent was created."@en ;
                 rdfs:label "has home platform"@en .



:hasHomeWorkspace a owl:ObjectProperty ;
                  rdfs:subPropertyOf :isContainedBy ;
                  owl:inverseOf :isHomeOf ;
                  rdfs:comment "The HW of an agent is the specific workspace where the agent spawned."@en ;
                  rdfs:label "has home workspace"@en .



:hasSignifier a owl:ObjectProperty ;
              rdfs:domain :ResourceProfile ;
              rdfs:range :Signifier ;
              rdfs:comment "A relation between a resource profile and a signifier describing an affordance associated to the resource."@en ;
              rdfs:label "has signifier"@en .



:hosts a owl:AsymmetricProperty ;
       owl:inverseOf :isHostedBy ;
       rdfs:domain :Platform ;
       rdfs:comment "A relation that refers to an information resource or a process (e.g., agent) that is hosted on a platform. A hosting relation might have further implications, e.g. the usage of the hosted resource (or the usage of platform resources by the hosted resource) could be subject to terms of service or data licensing policies specific to the hosting platform."@en ;
       rdfs:label "hosts"@en .



:isContainedIn a owl:AsymmetricProperty ;
               rdfs:range :Workspace ;
               rdfs:comment "A relation that describes the workspace that contains a resource."@en ;
               rdfs:label "is contained in"@en .



:isDescribedBy a owl:AsymmetricProperty ;
               rdfs:range [ a owl:Class ;
                            owl:unionOf ( :ResourceProfile
                                          :Signifier
                                        )
                          ] ;
               rdfs:comment "A relation which maps the resource profiles and signifiers associated to a resource."@en ;
               rdfs:label "is described by"@en .



:isHomeOf a owl:AsymmetricProperty ;
          rdfs:subPropertyOf :containsAgent ;
          rdfs:domain :Workspace ;
          rdfs:range :Agent ;
          rdfs:comment "The HW is the specific workspace where the agent spawned"@en ;
          rdfs:label "is home of"@en .



:isHostedBy a owl:AsymmetricProperty ;
            rdfs:range :Platform ;
            rdfs:comment "A relations that refers to the platform that hosts the resource. "@en ;
            rdfs:label "is hosted by"@en .

