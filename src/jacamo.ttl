            sh:class hctl:Form ;
            sh:property :InvokeAction :PostMethod, :XAgentWebIDHeader [
                sh:path hctl:hasTarget ;
                sh:minCount 1 ;
                sh:maxCount 1 ;
                sh:hasValue "/focus"
            ]
        ]
    ] 
].

#######################
# Body specifications #
#######################

jacamo:BodyProfile a sh:NodeShape ;
    sh:class :ResourceProfile ;
    sh:property [
        sh:path :isContainedIn ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype :Workspace
    ], [ 
        sh:path :isProfileOf ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:datatype :Body   
    ] .
